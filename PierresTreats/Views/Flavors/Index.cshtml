@{
    Layout = "_Layout";
}

<h3>Flavors</h3>

<div>
    @if (Model.Count == 0)
    {
      <h4>There are no flavors listed</h4>
    }

    else{
      <h3>Available flavors:</h3>
    } @foreach (Flavor flavor in Model)
    {
      <li>
            @Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId})
      </li>
    }

@Html.ActionLink("Add new flavor", "Create")
</div>


