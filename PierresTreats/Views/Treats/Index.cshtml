@{
    Layout = "_Layout";
}

<div>
  <h1>Treats</h1>
    @if (Model.Count == 0)
    {
      <h3>No treats have been added</h3>
    }
    else
    {
      <h3>Available treats:</h3>
    } @foreach (Treat treat in Model)
    {
      <li>
            @Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId})
      </li>
    }

@Html.ActionLink("Add new treat", "Create")
</div>

